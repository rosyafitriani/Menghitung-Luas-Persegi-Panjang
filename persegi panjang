import java.util.Scanner;

public class App{
    public static void main(String[] args) throws Exception {
        Scanner inputan = new Scanner(System.in);
        System.out.print("Masukan panjang persegi panjang : ");
        double panjang = inputan.nextDouble();

        System.out.print("Masukan lebar persegi panjang : ");
        double lebar = inputan.nextDouble();

        double keliling = 2 * (panjang + lebar);

        System.out.printf( "keliling persegi panjang :" + keliling);
        inputan.close();
    }
}
